<Window x:Class="WpfApp3.MenuReportes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú de Reportes" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#607D8B" CornerRadius="0,0,10,10">
            <TextBlock Text="REPORTES" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Contenido del menú -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="btnReporteCargas" Content="a. Cargas" 
                    Height="55" Width="350" Margin="0,20"
                    Background="#455A64" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnReporteCargas_Click"/>

            <Button x:Name="btnReporteIngresos" Content="b. Ingresos" 
                    Height="55" Width="350" Margin="0,20"
                    Background="#546E7A" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnReporteIngresos_Click"/>

            <Button x:Name="btnReporteSalidas" Content="c. Salidas" 
                    Height="55" Width="350" Margin="0,20"
                    Background="#78909C" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnReporteSalidas_Click"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <Button x:Name="btnVolver" Content="Volver" Width="100" Height="35"
                    Background="#757575" Foreground="White" FontWeight="Medium"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                    Click="BtnVolver_Click"/>
        </Border>
    </Grid>
</Window>