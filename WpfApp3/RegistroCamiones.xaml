<Window x:Class="WpfApp3.RegistroCamiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Camiones" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" CornerRadius="0,0,10,10">
            <TextBlock Text="REGISTRO DE CAMIONES" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Formulario -->
        <StackPanel Grid.Row="1" Margin="50" VerticalAlignment="Center">
            <TextBlock Text="Peso Máximo (kg):" Margin="0,15,0,5" FontWeight="Medium" FontSize="14"/>
            <TextBox x:Name="txtPesoMaximo" Height="40" FontSize="14" Padding="10,0"/>

            <TextBlock Text="Placa:" Margin="0,20,0,5" FontWeight="Medium" FontSize="14"/>
            <TextBox x:Name="txtPlaca" Height="40" FontSize="14" Padding="10,0"/>

            <TextBlock Text="Peso Vacío (kg):" Margin="0,20,0,5" FontWeight="Medium" FontSize="14"/>
            <TextBox x:Name="txtPesoVacio" Height="40" FontSize="14" Padding="10,0"/>
        </StackPanel>

        <!-- Botones -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnGuardar" Content="Guardar" Width="100" Height="35" Margin="15,0"
                        Background="#4CAF50" Foreground="White" FontWeight="Medium"
                        Click="BtnGuardar_Click"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="35" Margin="15,0"
                        Background="#757575" Foreground="White" FontWeight="Medium"
                        Click="BtnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>