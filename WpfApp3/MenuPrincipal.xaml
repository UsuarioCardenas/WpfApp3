<Window x:Class="WpfApp3.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Transporte - Menú Principal" Height="500" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" CornerRadius="0,0,10,10">
            <TextBlock Text="MENÚ PRINCIPAL - SISTEMA DE TRANSPORTE" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Contenido del menú -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Operaciones -->
            <Button x:Name="btnOperaciones" Content="3. Operaciones (2 Puntos)" 
                    Height="60" Width="400" Margin="0,20"
                    Background="#4CAF50" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnOperaciones_Click"/>

            <!-- Mantenimientos -->
            <Button x:Name="btnMantenimientos" Content="4. Mantenimientos (2 Puntos)" 
                    Height="60" Width="400" Margin="0,20"
                    Background="#9C27B0" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnMantenimientos_Click"/>

            <!-- Reportes -->
            <Button x:Name="btnReportes" Content="5. Reportes (2 Puntos)" 
                    Height="60" Width="400" Margin="0,20"
                    Background="#607D8B" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnReportes_Click"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Width="120" Height="35"
                    Background="#F44336" Foreground="White" FontWeight="Medium"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                    Click="BtnCerrarSesion_Click"/>
        </Border>
    </Grid>
</Window>