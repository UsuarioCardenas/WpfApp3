<Window x:Class="WpfApp3.RegistroSalidas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Salidas" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF5722" CornerRadius="0,0,10,10">
            <TextBlock Text="REGISTRO DE SALIDAS" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Formulario -->
        <ScrollViewer Grid.Row="1" Margin="30">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Columna izquierda -->
                    <StackPanel Grid.Row="0" Grid.Column="0">
                        <TextBlock Text="Tipo Documento:" Margin="0,10,0,5" FontWeight="Medium"/>
                        <ComboBox x:Name="cmbTipoDocumento" Height="35">
                            <ComboBoxItem Content="DNI"/>
                            <ComboBoxItem Content="RUC"/>
                            <ComboBoxItem Content="Pasaporte"/>
                        </ComboBox>

                        <TextBlock Text="Número Documento:" Margin="0,15,0,5" FontWeight="Medium"/>
                        <TextBox x:Name="txtNumeroDocumento" Height="35" FontSize="14" Padding="10,0"/>

                        <TextBlock Text="Peso (kg):" Margin="0,15,0,5" FontWeight="Medium"/>
                        <TextBox x:Name="txtPeso" Height="35" FontSize="14" Padding="10,0"/>

                        <TextBlock Text="Tipo Auto:" Margin="0,15,0,5" FontWeight="Medium"/>
                        <ComboBox x:Name="cmbTipoAuto" Height="35">
                            <ComboBoxItem Content="Camión"/>
                            <ComboBoxItem Content="Camioneta"/>
                            <ComboBoxItem Content="Tráiler"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Columna derecha -->
                    <StackPanel Grid.Row="0" Grid.Column="2">
                        <TextBlock Text="Nombre Transportista:" Margin="0,10,0,5" FontWeight="Medium"/>
                        <TextBox x:Name="txtNombreTransportista" Height="35" FontSize="14" Padding="10,0"/>

                        <TextBlock Text="Fecha y Hora:" Margin="0,15,0,5" FontWeight="Medium"/>
                        <DatePicker x:Name="dpFechaHora" Height="35"/>

                        <TextBlock Text="Peso de Ingreso (kg):" Margin="0,15,0,5" FontWeight="Medium"/>
                        <TextBox x:Name="txtPesoIngreso" Height="35" FontSize="14" Padding="10,0"/>

                        <TextBlock Text="Peso de Salida (kg):" Margin="0,15,0,5" FontWeight="Medium"/>
                        <TextBox x:Name="txtPesoSalida" Height="35" FontSize="14" Padding="10,0"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Botones -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="btnGuardar" Content="Guardar" Width="100" Height="35" Margin="10,0"
                        Background="#4CAF50" Foreground="White" FontWeight="Medium"
                        Click="BtnGuardar_Click"/>
                <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="35" Margin="10,0"
                        Background="#757575" Foreground="White" FontWeight="Medium"
                        Click="BtnCancelar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>