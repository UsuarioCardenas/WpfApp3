<Window x:Class="WpfApp3.MenuMantenimientos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú de Mantenimientos" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#9C27B0" CornerRadius="0,0,10,10">
            <TextBlock Text="MANTENIMIENTOS" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Contenido del menú -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="btnConductores" Content="a. Conductores" 
                    Height="50" Width="350" Margin="0,15"
                    Background="#673AB7" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnConductores_Click"/>

            <Button x:Name="btnTransportistas" Content="b. Transportistas" 
                    Height="50" Width="350" Margin="0,15"
                    Background="#E91E63" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnTransportistas_Click"/>

            <Button x:Name="btnCamiones" Content="c. Camiones" 
                    Height="50" Width="350" Margin="0,15"
                    Background="#795548" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnCamiones_Click"/>

            <Button x:Name="btnProductos" Content="d. Productos" 
                    Height="50" Width="350" Margin="0,15"
                    Background="#607D8B" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnProductos_Click"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <Button x:Name="btnVolver" Content="Volver" Width="100" Height="35"
                    Background="#757575" Foreground="White" FontWeight="Medium"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                    Click="BtnVolver_Click"/>
        </Border>
    </Grid>
</Window>