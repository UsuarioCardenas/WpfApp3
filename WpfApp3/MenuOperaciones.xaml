<Window x:Class="WpfApp3.MenuOperaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú de Operaciones" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#f5f5f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" CornerRadius="0,0,10,10">
            <TextBlock Text="OPERACIONES" 
                       FontSize="24" FontWeight="Bold" Foreground="White"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Contenido del menú -->
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Button x:Name="btnIngresos" Content="a. Ingresos" 
                    Height="60" Width="350" Margin="0,20"
                    Background="#2196F3" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnIngresos_Click"/>

            <Button x:Name="btnSalidas" Content="b. Salidas" 
                    Height="60" Width="350" Margin="0,20"
                    Background="#FF9800" Foreground="White" FontSize="16" FontWeight="Medium"
                    Click="BtnSalidas_Click"/>

        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#e0e0e0" CornerRadius="10,10,0,0">
            <Button x:Name="btnVolver" Content="Volver" Width="100" Height="35"
                    Background="#757575" Foreground="White" FontWeight="Medium"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0"
                    Click="BtnVolver_Click"/>
        </Border>
    </Grid>
</Window>